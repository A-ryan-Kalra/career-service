{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts" // Include all TypeScript files in the 'src' directory
  ],
  "exclude": [
    "node_modules" // Exclude the 'node_modules' directory
    // "src/tools.ts"
  ]
}
